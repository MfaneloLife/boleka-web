###############################################
# Boleka Web Example Environment File
# Copy -> .env.local for local development.
# Never commit real secrets. Configure these in Vercel
# (Project Settings > Environment Variables) for
# Development / Preview / Production.
###############################################

############################
# NextAuth Core
############################
NEXTAUTH_SECRET=replace_with_strong_random_secret
# In production set this to your canonical domain
# NEXTAUTH_URL=https://app.your-domain

############################
# Email Provider (optional)
############################
EMAIL_SERVER_HOST=
EMAIL_SERVER_PORT=
EMAIL_SERVER_USER=
EMAIL_SERVER_PASSWORD=
EMAIL_FROM=no-reply@your-domain

############################
# OAuth Providers (optional)
############################
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=

############################
# Firebase (Client SDK - public)
############################
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=

############################
# Firebase Admin (server only)
############################
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
# IMPORTANT: keep literal \n escapes in private key for Vercel
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nLINE1\nLINE2\n...\n-----END PRIVATE KEY-----\n"

############################
# PayFast (Payment Gateway)
############################
PAYFAST_MERCHANT_ID=
PAYFAST_MERCHANT_KEY=
PAYFAST_PASS_PHRASE=
PAYFAST_RETURN_URL=http://localhost:3000/payment/success
PAYFAST_CANCEL_URL=http://localhost:3000/payment/cancel
PAYFAST_NOTIFY_URL=http://localhost:3000/api/payment/payfast-notify
# PAYFAST_API_URL= # optional override

############################
# Vision / ML (optional features)
############################
GOOGLE_APPLICATION_CREDENTIALS=
# GOOGLE_CLOUD_SERVICE_ACCOUNT_KEY= # if using JSON string instead of file path

############################
# Optional Runtime Flags
############################
# ENABLE_VERBOSE_PAYFAST_LOGGING=true
# FORCE_LOG_LEVEL=debug

###############################################
# Minimum Required For Production Deployment
# (Auth + Firebase + PayFast sandbox)
###############################################
# NEXTAUTH_SECRET
# NEXT_PUBLIC_FIREBASE_API_KEY
# NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN
# NEXT_PUBLIC_FIREBASE_PROJECT_ID
# NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET
# NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID
# NEXT_PUBLIC_FIREBASE_APP_ID
# FIREBASE_PROJECT_ID
# FIREBASE_CLIENT_EMAIL
# FIREBASE_PRIVATE_KEY
# PAYFAST_MERCHANT_ID
# PAYFAST_MERCHANT_KEY

###############################################
# Notes:
# 1. After adding/updating env vars in Vercel, re-deploy.
# 2. Preview & Production envs are isolated; set both.
# 3. Remove any default hard-coded fallback keys in code
#    before going live (replace with environment values).
# 4. Keep private keys out of client bundles by avoiding
#    NEXT_PUBLIC_ prefix for sensitive vars.
###############################################
